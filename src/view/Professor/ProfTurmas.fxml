<BorderPane prefHeight="530.0" prefWidth="797.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfessorController">
   <top>
      <Pane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #274D63;" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="panePerfil" layoutX="600.0" layoutY="8.0" onMouseClicked="#perfilProf">
               <children>
                  <ImageView fitHeight="28.0" fitWidth="28.0" layoutY="2.0">
                     <image>
                        <Image url="@../VE/account.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="lblNomePerfil" layoutX="38.0" layoutY="7.0" text="Label" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Pane>
            <Label layoutX="14.0" layoutY="8.0" text="SIGAB" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
   <left>
      <VBox alignment="BOTTOM_CENTER" prefHeight="480.0" prefWidth="100.0" style="-fx-background-color: #274D63E5;" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="440.0" prefWidth="100.0">
               <children>
                  <Button fx:id="btnTurmas" mnemonicParsing="false" onAction="#telaTurmas" onMouseEntered="#acenderBtnTurmas" onMouseExited="#apagarBtnTurmas" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: rgba(240,240,240,1); -fx-background-radius: 5px 0px 0px 5px;" text="Turmas" textFill="#274d63">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
            <Pane maxHeight="80.0" prefHeight="80.0" prefWidth="100.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <children>
                  <ImageView fitHeight="30.0" fitWidth="19.0" layoutX="67.0" layoutY="21.0" preserveRatio="true">
                     <image>
                        <Image url="@../VE/logout.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="btnSair" layoutX="-1.0" layoutY="14.0" mnemonicParsing="false" onAction="#logoff" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: transparent;" text="Sair" textFill="WHITE" />
               </children>
            </Pane>
         </children>
      </VBox>
   </left>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: F0F0F0;" BorderPane.alignment="CENTER">
         <children>
            <Pane layoutX="44.0" layoutY="40.0" prefHeight="400.0" prefWidth="610.0" style="-fx-background-color: white;">
               <children>
                  <Label layoutX="23.0" layoutY="14.0" text="Turmas Ativas">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField layoutX="332.0" layoutY="15.0" prefHeight="26.0" prefWidth="225.0" promptText="Pesquisa" />
                  <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="557.0" layoutY="16.0">
                     <image>
                        <Image url="@../VE/magnify.png" />
                     </image>
                  </ImageView>
                  <TableView fx:id="tblTurmas" layoutX="19.0" layoutY="54.0" prefHeight="297.0" prefWidth="571.0">
                     <columns>
                        <TableColumn fx:id="collumnCodigoTurma" prefWidth="75.0" text="Código" />
                        <TableColumn fx:id="collumnDisciplina" prefWidth="75.0" text="Disciplina" />
                        <TableColumn fx:id="collumnHorario" prefWidth="75.0" text="Horário" />
                        <TableColumn fx:id="collumnAlunos" prefWidth="75.0" text="Alunos" />
                        <TableColumn fx:id="collumnStatus" prefWidth="75.0" text="Status" />
                        <TableColumn fx:id="collumnLocal" prefWidth="75.0" text="Local" />
                        <TableColumn fx:id="collumnDiario" prefWidth="75.0" text="Diario" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </Pane>
         </children>
      </Pane>
   </center>
</BorderPane>
